{% style %}
  form > ul {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 0px;
    gap: 2em;
  }
  form > ul > li {
    list-style: none;
    width: 100%;
  }
  form > ul > li > input:not([type="submit"]), textarea {
    width: 100%;
    border: 1px solid #161616;
    background: #f2f1eb;
    border-radius: 0;
    padding: 1em 2em;
    color: #161616;
    font-size: 12px;
  }
  form > ul > li > input:not([type="submit"])::placeholder,
    textarea::placeholder {
    color: #161616;
  }
  form > ul > li > input:focus, textarea:focus {
    border: 2px solid #161616;
  }
  .left_image_details {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 100vh;
  }
{% endstyle %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="section-banner-v7"
  style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}"
>
  <div class="left-image-banner section-banner-v7 mt-all">
    <div class="">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6">
          <div class="picture text-center">
            <div class="box-img2 w-100">
              {% if section.settings.img_banner1 != blank %}
                <a href="{{section.settings.url_banner1}}"
                  ><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid w-100"
                ></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"
                  ><img src="//placehold.it/850x600" class="img-fluid w-100" alt=""
                ></a>
              {% endif %}
            </div>
          </div>
        </div>

        <div class="col-lg-6 col-md-6">
          <div style="text-align: left !important;" class="left_image_details info">
            <div>
              {% if section.settings.title_top != blank %}
                <div class="title-banner-top">
                  <h3 style="font-size: 80px;" class="title">{{ page.title }}</h3>
                </div>
              {% endif %}
              <br>
              <p style="line-height: 25px; letter-spacing: 1px;">{{ page.content }}</p>
            </div>
            {% form 'contact' %}
              {% if form.posted_successfully? %}
                <p class="success-msg">Thanks for contacting us! We'll get back to you as soon as possible.</p>
              {% endif %}

              {% comment %}
                -----Error message ----
                {% if form.errors %}
                  <p class="error-msg">
                    <ul class="error-list" style="color:#E0360F">
                      {% for field in form.errors %}
                        {% if field == 'body' %}
                          <li>Your message cannot be blank.</li>
                        {% endif %}
                        {% if field == 'email' %}
                          <li>Please enter a valid email address.</li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  </p>
                {% endif %}
              {% endcomment %}

              <ul id="contact-form">
                <li>
                  <input placeholder="Name" type="text" id="name" name="contact[name]">
                </li>
                <li>
                  <input placeholder="Email" type="email" id="email" class="email" name="contact[email]">
                </li>
                <li>
                  <input placeholder="Subject" type="text" id="subject" class="subject" name="contact[body]">
                </li>
                <li>
                  <textarea placeholder="Message" id="message" name="contact[body]"></textarea>
                </li>

                <li>
                  <input style="margin-top: 0;" type="submit" class="submit btn" value="SUBMIT">
                </li>
              </ul>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

