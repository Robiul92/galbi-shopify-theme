<div data-section-id="{{ section.id }}" data-section-type="section-countdown-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-countdown-v1 mt-all">
    <div class="container container-v1">
      <div class="row align-items-center justify-content-around">
        <div class="col-lg-5  col-md-6 text-center">
          <div class="img-bottom">
            <a href="{{section.settings.url_button1}}">
              {% if section.settings.img_bottom != blank %}
              <img src="{{section.settings.img_bottom | img_url:'master'}}" class="img-fluid">
              {% else %}
              <img src="//placehold.it/700x700" class="img-fluid" alt="">
              {% endif %}
            </a>
        </div> 
        </div>
        <div class="col-lg-5  col-md-6">
          <div class="countdown">
            <div class="content-countdown">
              {% if section.settings.title_product != blank %}
              <h3 class="title-product-countdown">                
                  {{section.settings.title_product}}
              </h3>
              {% endif %}
              
              {% if section.settings.content-countdown != blank %}                
                <p class="content">{{section.settings.content-countdown}}</p>                
              {% endif %}

              <div class="time">
                {% if section.settings.timecountdow != blank %}
                <ul class="mb-0 list-inline list-unstyled " data-countdown="section-countdown" data-date="{{section.settings.timecountdow}}">
                </ul>
                {% endif %}
              </div>

              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
              {% endif %}

            </div>                   
          </div>
        </div>
      </div>
            
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Countdown v1",
  "settings": [
  	{
      "type": "header",
      "content": "setting banner"
    },
	{
      "type": "image_picker",
      "id": "img_bottom",
      "label": "Image left",
	  "info": "700 x 700px recommended"
    },
  	{
      "type": "text",
      "id": "title_product",
      "label": "Title",
      "default": "Winter Collection 2019"
    },
	{
      "type": "text",
      "id": "content-countdown",
      "label": "Content",
      "default": "Go sporty this summer with this vintage navy and white striped v-neck t-shirt from the Nike. Perfect for pairing with denim and white kicks for a stylish sporty vibe."
    },
 	
	{
      "type": "header",
      "content": "Setting Time"
    },
	{
        "type": "text",
        "id": "timecountdow",
        "label": "Year-Month-Date-Time-Minute-Seconds",
        "default": "2019-12-12-12-12-12"
      },

    {
      "type": "text",
      "id": "button_1",
      "label": "button 1",
      "default": "ShOP NOW"
    },
  	{
      "type": "url",
      "id": "url_button1",
      "label": "URL button 1",
      "default": "/collections/all"
    },
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
	
  ],
  "presets": [
    {
      "name": "Countdown v1",
      "category": "HOME 2"
    }
  ]
}
{% endschema %}

