<div data-section-id="{{ section.id }}" data-section-type="section-service-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="container container-v2">
    <div class="section-service-v2">
        <div class="row slickjs-services-v1">
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == "service" %}
          <div class="text-center itemtservice justify-content-center">
            <div class="box-service col-lg-12">
              <div class="number">
                {% if block.settings.icon_svg != blank %}
                {{block.settings.icon_svg}}  
                {% else %}
                {% if block.settings.img_title != blank %}
                <img src="{{block.settings.img_title |img_url : 'master'}}">
                {% else %}
                <img src="//placehold.it/56x56">
                {% endif %}	
                {% endif %} 
              </div>
              
              <div class="info">
                {% if block.settings.block_title != blank %}
                <h4 class="title">{{block.settings.block_title}}</h4>
                {% endif %}
                {% if block.settings.block_content != blank %}          	
                <p class="content">{{block.settings.block_content}}</p>
                {% endif %}
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
          {% endif %}
        </div>
      </div>
  </div>
</div>
{% schema %}
{
  "name": "Service v2",
  "class": "index-section",
  "settings": [
	{
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background image Section"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
    
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service V1",
      "settings": [
		{
          "type": "image_picker",
          "id": "img_title",
          "label": "Image left",
          "info": "56 x 56px recommended"
        },
		{
          "type": "textarea",
          "id": "icon_svg",
          "label": "svg icon"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": " SHIPPING & RETURN"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Content",
          "default": " If your glasses aren't perfect, return them within 30 days<br> for a full refund. We'll even pay shipping."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service v2",
      "category": "HOME 3",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "block_title": "SHIPPING & RETURN",
			"block_content" : "If your glasses aren't perfect, return them within 30 days for a full refund. We'll even pay shipping."
          }
        },
        {
          "type": "service",
          "settings": {
            "block_title": " SAFE PAYMENT",
			"block_content" : "Pay with the world's most popular and secure payment methods"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_title": "SHOP WITH CONFIDENCE",
			"block_content" : "Our Buyer Protection covers your purchase from click to delivery."
          }
        }
      ]
    }
  ]
}
{% endschema %}


