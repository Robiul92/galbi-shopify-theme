<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4">
    <div class="container container-v2">
      <div class="row align-items-center justify-content-center">        
        <div class="col-lg-4 col-md-6 col-12 col-sm-12">
          <div class="box-info">
            <div class="box-img-one">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img src="//placehold.it/525x500" class="img-fluid" alt=""></a>
              {% endif %}
            </div>           
          </div>
        </div>
        
        <div class="col-lg-8 col-md-6 col-12 col-sm-12">
          <div class="box-info">
            <div class="box-img-one">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner2}}"><img src="//placehold.it/805x500" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}

              <div class="info-bottom"> 
                {% if section.settings.button_2 != blank %}
                <a href="{{section.settings.url_button2}}" class="button-shop list-inline-item mr-0">{{section.settings.button_2}}</a>
                {% endif %}
              </div>
            </div>
            
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v4",
  "settings": [
  	{
      "type": "header",
      "content": "setting banner 1"
    },
	{
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Image",
	  "info": "525 x 500px recommended"
    },
  	{
      "type": "url",
      "id": "url_banner1",
      "label": "URL images banner 1",
      "default": "/collections/all"
    },
	

	{
      "type": "header",
      "content": "setting banner 2"
    },
	{
      "type": "image_picker",
      "id": "img_banner2",
      "label": "Image",
	  "info": "805 x 500px recommended"
    },
  	{
      "type": "url",
      "id": "url_banner2",
      "label": "URL images banner 2",
      "default": "/collections/all"
    },
	{
      "type": "text",
      "id": "title_2",
      "label": "Title banner 2",
      "default": "NEW COLLECTION"
    },
  	{
      "type": "text",
      "id": "button_2",
      "label": "button 2",
      "default": "Shop now"
    },
  	{
      "type": "url",
      "id": "url_button2",
      "label": "URL button 2",
      "default": "/collections/all"
    },	

    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v4",
      "category": "HOME 3"
    }
  ]
}
{% endschema %}

