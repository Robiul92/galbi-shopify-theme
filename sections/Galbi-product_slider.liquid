      "id": "url_button",
      "label": "URL button ",
      "default": "/collections/all"
    },

    {
      "type": "header",
      "content": "Info Product"
    },
    {
      "type": "collection",
      "id": "select_collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 4
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Title",
          "default": "Product title"
        },
        {
          "type": "number",
          "id": "price",
          "label": "Products price",
          "default": 20
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }        
      ]
    }
  ],
  "presets": [
    {
      "name": "Galbi Products Slider",
      "category": "HOME 1"
    }
  ]
}
