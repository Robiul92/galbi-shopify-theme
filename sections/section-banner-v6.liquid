<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">

  <div class="section-banner-v6">
    <div class= "box-video"> 
      <a data-fancybox href="{{ section.settings.url_section_video }} ">              
        {% if section.settings.image_video != blank %}
        <img src="{{section.settings.image_video|img_url:'master'}}" class="img-fluid" alt="">
        {% else %}
        <img src="https://placehold.it/1430x500" class="img-fluid" alt="">
        {% endif %}
        <div class="box-icon">
          <span>
            <i class="ti-control-play"></i>
          </span>
        </div>

      </a>            
    </div>
  </div>

</div>
{% schema %}
{
  "name": "Banner v6",
  "settings": [
	{
      "type": "image_picker",
      "id": "image_video",
      "label": "Image video",
	  "info": "1170 x 500px recommended"
    },

	{
      "type": "url",
      "id": "url_section_video",
      "label": "URL Video",
      "info": "[Upload video .mp4 in here](/admin/settings/files)"
		
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v6",
      "category": "HOME 4"
    }
  ]
}
{% endschema %}

