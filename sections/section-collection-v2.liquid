<div data-section-id="{{ section.id }}" data-section-type="section-collection-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-collection-v2 mt-all">
    <div class="container container-v2">
      <div class="row justify-content-between align-items-center">
        <div class="col-lg-5 col-sm-5 col-12 col-md-6">
          <div class="box-info left">
            <div class="box-img">
              {% if section.settings.img_banner1 != blank %}
              <a  href="{{section.settings.url_banner1}}"><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
              <a  href="{{section.settings.url_banner1}}"><img src="//placehold.it/589x657" class="img-fluid" alt=""></a>
              {% endif %}
            </div>

            {% if section.settings.sub_title1 != blank %}
            <span class="label_text"><span class="text">{{section.settings.sub_title1}}</span></span>
            {% endif %}

          </div>
        </div>        
        <div class="col-lg-6 col-sm-6 col-12 col-md-6">
          <div class="box-info-right">
            <div class="spring_carousel jsspring_carousel">
              {% if section.blocks.size > 0 %}
              {% for block in section.blocks %}
              {% if block.type == "shopnow" %}
              <div class="item text-left">
                {% if block.settings.block_title != blank %}
                <h3 class="mb-0">{{block.settings.block_title}}</h3>
                {% endif %}
                {% if block.settings.block_description != blank %}
                <p>{{block.settings.block_description}}</p>
                {% endif %}
                {% if block.settings.block_buton != blank %}
                <a href="{{section.settings.block_url}}">
                  {{block.settings.block_buton}}
                </a>
                {% endif %}
              </div>
              {% endif %}
              {% endfor %}
              {% endif %}

            </div>

          </div>
        </div>     
      </div>
    </div>
  </div>
</div>
{% schema %}

{
  "name": "Collection v2",
  "settings": [
    {
      "type": "header",
      "content": "Banner 1"
    },
    {
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Image",
      "info": "589 x 657px recommended"
    },
    {
      "type": "url",
      "id": "url_banner1",
      "label": "URL banner and title",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "sub_title1",
      "label": "Sub Title banner",
      "default": "Sale up to 30% today"
    },
    
    
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
	
	"blocks": [
    {
      "type": "shopnow",
      "name": "Banner item right",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": "Spring winter 2019"
        },
        {
          "type": "text",
          "id": "block_description",
          "label": "Description",
          "default": "The Spring Winter 2019 collection is based on a road trip through California. Drawing on the influences of surfer culture and the vibrant colours of the streets, the collection nods to a 50s aesthetic with clean tailored lines and more fitted silhouettes."
        },
        {
          "type": "text",
          "id": "block_buton",
          "label": "Button",
          "default": "view collection"
        },
		{
          "type": "url",
          "id": "block_url",
          "label": "URL button",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection v2",
      "category": "HOME 5",
	  "blocks": [
        {
          "type": "shopnow",
          "settings": {
          }
        }
      ]
    }
  ]
}

{% endschema %}

