<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v7 mt-all">
<div class="container container-v1">
    <div class="row align-items-center">

      <div class="col-lg-5 col-md-6">
        <div class="info">
          {% if section.settings.title_top != blank %}
          <div class="title-banner-top">
            <h3 class="title">{{section.settings.title_top}}</h3>
          </div>
          {% endif %}

          {% if section.settings.content_top != blank %}
          <p class="mb-0 content">{{section.settings.content_top}}</p>
          {% endif %}

          {% if section.settings.button != blank %}
          <a href="{{section.settings.url_button}}" class="button-shop">{{section.settings.button}}</a>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-7 col-md-6">
        <div class="picture text-center">
          <div class="box-img2 w-100">
            {% if section.settings.img_banner1 != blank %}
            <a href="{{section.settings.url_banner1}}"><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid w-100"></a>
            {% else %}
            <a href="{{section.settings.url_banner1}}"><img src="//placehold.it/850x600" class="img-fluid w-100" alt=""></a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
</div>
  </div>
</div>
{% schema %}

{
  "name": "Banner v7",
  "settings": [
    {
      "type": "header",
      "content": "Info top left"
    },
    {
      "type": "text",
      "id": "title_top",
      "label": "Title banner top",
      "default": "New Collection"
    },
    {
      "type": "textarea",
      "id": "content_top",
      "label": "Content top",
      "default": "Eveland is a London based jewellery brand. Each piece in our collection has been meticulously designed in our studio near London Bridge and embodies our principals of simplicity, detail and understated masculinity. Our collection of Pendants, Cuffs and Rings have been designed to be worn individually or layered and stacked together."
    },
    {
      "type": "text",
      "id": "button",
      "label": "button",
      "default": "ShOP NOW"
    },
    {
      "type": "url",
      "id": "url_button",
      "label": "URL button",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Info top right"
    },
    {
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Image top right",
      "info": "850 x 600px recommended"
    },
    {
      "type": "url",
      "id": "url_banner1",
      "label": "URL images top right",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v7",
      "category": "HOME 6"
    }
  ]
}

{% endschema %}

