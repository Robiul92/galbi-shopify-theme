<div data-section-id="{{ section.id }}" data-section-type="section-intagram-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-intagram-v3 mt-all mb-5">
    <div class="container container-v1">
      
      <div class="row align-items-center">
        <div class="col-lg-3">
          <div class="text-center box-sextion-left">
            {% if section.settings.title_icon1 != blank %}
            <span class="icon-top"><i class="{{section.settings.title_icon1}}"></i></span>
            {% endif %}
            {% if section.settings.section_title_big != blank %}
            <h3 class="title_insta text-center mb-0">{{section.settings.section_title_big}}</h3>
            {% endif %}
            {% if section.settings.sub_section_title != blank %}
            <p class="des_insta text-center mb-0">{{section.settings.sub_section_title}}</p>
            {% endif%}
          </div>
        </div>
        <div class="col-lg-9">
          {% assign instafeed_img = '{{image}}' %}
          {% assign instafeed_link = '{{link}}' %}

          {% if section.settings.ins_userid != blank and section.settings.ins_access_token != blank %}
          <script>
            jQuery(document).ready(function($) {
              var feed = new Instafeed({
                get: 'user',
                userId: '{{section.settings.ins_userid}}',
                accessToken: '{{section.settings.ins_access_token}}',
                template: '<div class="instagram-item col-md-4 py-md-3 py-2"> <a href="{{instafeed_link}}" class="d-block"> <img src="{{instafeed_img}}" alt="" class="img-fluid w-100"> </a></div>',
                target: 'engoj_instagramv1',
                resolution: 'standard_resolution',
                limit: '{{section.settings.ins_limit_number}}'
              });
              feed.run();
            });
          </script>
          {% endif %}

          <div class="instagram-content row " id="engoj_instagramv1">
            {% if section.settings.ins_userid == blank or section.settings.ins_access_token == blank %}
            {% if shop.permanent_domain == "calfia-store-demo.myshopify.com" %}
            {% for i in (1..section.settings.ins_limit_number) %}
            <div class="instagram-item col-md-4 py-md-3 py-2 ">
              <a href="https://www.instagram.com/" class="d-block">
                <img src="{{ 'intagram' | append: i | append: '.jpg' | file_img_url: 'master' }}">
              </a>
            </div>
            {% endfor %}
            {% else %}
            <div class="instagram-item col-md-4 py-md-3 py-2">
              <a href="https://www.instagram.com/" class="d-block">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </a>
            </div>
            {% endif %}
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .instagram-content .instagram-item a img:hover{
		    filter: brightness(0.3);
    		transition: .3s;
  }
  .instagram-content .instagram-item a img{
    		transition: .3s;
  }
</style>

