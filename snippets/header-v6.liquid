<header id="header" class="header-v6-h6 jsheader6 js_height_hd d-none d-xl-block {% if settings.hdv6_enable_absolute %}header-absolute {% endif %} ">
   {% include 'eveland-horizon-menu' %}
  <div class="container container-v1">
    <div class="row align-items-center">
      <div class="col-lg-6 left">
        <div class="logo">
          <div class="center logo delay05">          	
            {% if settings.hdv6_logo_svg !=blank %}
            <div class="logosvg" style="max-width:{{settings.hdv6_logo_maxwidth}}px;">
              <a class="logourl" href="{{shop.url}}">{{settings.hdv6_logo_svg}}</a>
            </div>
            {% else %}          	
            <a href="{{shop.url}}">
              {% if settings.hdv6_logo != blank %}
              <img src="{{settings.hdv6_logo|img_url:'master'}}" width="{{settings.hdv6_logo_maxwidth}}" alt="{{shop.name}}">
              {% else %}
              <img src="//placehold.it/160x46" width="{{settings.hdv6_logo_maxwidth}}" alt="{{shop.name}}">
              {% endif %}
            </a>
            {% endif %}          
          </div>
        </div>
      </div>      
      <div class="col-lg-6 currencies-login">
        <div class="cart-login-search align-items-center"> 
          <ul class="list-inline list-unstyled mb-0">
            <li class="list-inline-item mr-0">
              <a href="javascript:void(0)" class="search js-search-destop">
                {% if settings.hd_icon_search_svg != blank %}
                {{settings.hd_icon_search_svg}}
                {% else %}
                <i class="{{settings.hd_icon_search}}"></i>
                {% endif %}
              </a>
            </li>
            <li class="list-inline-item mr-0">
              <a href="{% if customer %}/account {% else %}javascript:void(0){% endif %}" class="login {% if customer %}{% else %}js-call-popup-login{% endif %}">
                {% if settings.hd_icon_login_svg != blank %}
                {{settings.hd_icon_login_svg}}
                {% else %}
                <i class="{{settings.hd_icon_login}}"></i>
                {% endif %}                
              </a>
            </li>
            <li class="list-inline-item mr-0">
              <a href="javascript:void(0)" class="cart js-call-minicart">
                {% if settings.hd_icon_cart_svg != blank %}
                {{settings.hd_icon_cart_svg}}
                {% else %}
                <i class="{{settings.hd_icon_cart}}"></i>
                {% endif %}
                <span class="number-cart enj-cartcount">{{ cart.item_count }}</span>
              </a>
            </li>
            
          </ul>
        </div>
        <div class="model_menu js-model_menu">
          <span class="model-menu-icon">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</header>
<style>
  #header .currencies-login .cart-login-search ul li a svg{
    fill: {{settings.hdv6_color_text}};
  }
  #header .currencies-login .cart-login-search ul li a{
    color: {{settings.hdv6_color_text}};
  }
  .header-v6-h6 .model_menu .model-menu-icon span{
    background: {{settings.hdv6_color_text}};
  }
</style>