<div style="height: 400px;" class="poup-login-destop js-poup-nptify-destop d-xl-block">
  <div class="overlay_login-content">
    <div class="row justify-content-center box_content_accountdestop text-center">
      <div class="formlogin-destop">
        <div class="login_primary CustomerLoginForm">
          <h2 class="title-tab-login">NOTIFY ME</h2>
          <div class="mailrrr mt-3">
            {% form 'contact' %}
              {{ form.errors | default_errors }}
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Name" name="contact[first_name]" required>
              </div>
              <div class="form-group">
                <input
                  type="email"
                  class="form-control"
                  name="contact[email]"
                  placeholder="{{ 'customer.login.email' | t }}"
                  required
                >
              </div>
              <input style="display: none;" type="text" value="Product Name: {{ product.title }}" name="contact[body]" id="message">
              <button type="submit" class="btn btn-dark w-100" value="{{ 'customer.login.log_in' | t }}">submit</button>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
    <a href="javascript:void(0)" class="eveland-close-login js-eveland-close-notify"><i class="ti-close"></i></a>
  </div>
</div>
<div class="bg-login-popup js-bg-login-popup"></div>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const loginFrom = document.querySelector('.CustomerLoginForm');
    const forgotForm = document.querySelector('.RecoverPasswordForm');

    document.querySelector('.RecoverPassword').addEventListener('click', () => {
      forgotForm.style.display = 'block';
      loginFrom.style.display = 'none';
    });

    document.querySelector('.HideRecoverPasswordLink').addEventListener('click', () => {
      forgotForm.style.display = 'none';
      loginFrom.style.display = 'block';
    });
  });
</script>